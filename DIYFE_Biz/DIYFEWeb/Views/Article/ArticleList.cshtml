            @if(Model.Into != null){
            <article>
                <h1>@Model.Into.Name</h1>
                    @Html.Raw(Model.Into.MainContent)
            </article>
            }
            @for (int i = 0; i < @Model.PagedArticle.PageSize; i++)
            {
                if (i < Model.PagedArticle.Count()){
                 @Html.Partial("_DataListItem", Model.PagedArticle[i])
                 }
            }
            
            <div class="paging">
                @Html.PagedListPager(Model.PagedArticle, page => Url.Action("Index", new { page }))
            </div>
        </div>
        <div class="col-xs-6 col-sm-4 col-lg-4">
            <div id="treeMenu">
                @Html.Partial("_RelatedTreeView", Model.RelatedTreeView)
            </div>
            <div class="productPromo">
                product or project promotion area
            </div>
            <div id="topLevelLinkList">
                top level link list that isn't covered in the tree menu
            </div>
        </div>
