@model DIYFEWeb.Models.ArticleListModel
@using PagedList
@using PagedList.Mvc


 @Html.Partial("Error/_ErrorPageHandler")

<div class="content" style="margin-top:45px;">
   <div class="row">
        <div class="col-xs-12">
     @{
              @Html.Partial("_BreadCrumb", Model.CrumbLinkList)
            }
            </div>
       </div>
</div>

<div class="content" style="margin-top:30px;">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-lg-8">
            
            @if(Model.Into != null){
            <article>
                <h1>@Model.Into.Title</h1>
                    @Html.Raw(Model.Into.MainContent)
            </article>
            }
            @for (int i = 0; i < @Model.PagedArticle.PageSize; i++)
            {
                if (i < Model.PagedArticle.Count()){
                 @Html.Partial("_DataListItem", Model.PagedArticle[i])
                 }
            }
            
            <div class="paging">
                @Html.PagedListPager(Model.PagedArticle, page => Model.PageLinkBase + "?page=" + page.ToString())
            </div>
        </div>
        <div class="col-xs-6 col-sm-4 col-lg-4">
            <div id="treeMenu">
                @Html.Partial("_RelatedTreeView", Model.RelatedTreeView)
            </div>
            <div class="productPromo">
                <img src="~/Content/Img/promo.png" />
            </div>
            <div id="productPromo">
                <img src="~/Content/Img/promo.png" />
            </div>
        </div>
        </div>

</div>