@model DIYFEWeb.Models.ArticleModel
@using PagedList
@using PagedList.Mvc


 @Html.Partial("Error/_ErrorPageHandler")


<div class="content" style="margin-top:45px;">
   <div class="row">
        <div class="col-xs-12">
     @{
              @Html.Partial("_BreadCrumb", Model.CrumbLinkList)
            }
            </div>
       </div>
</div>

<div class="content" id="articleDetails" style="margin-top:30px;">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-lg-8">
                <article>
                    <h1>@Model.Article.Name</h1>
                    @Html.Raw(Model.Article.MainContent)
                    <section id="comments">
                            @if (Model.Article.ArticleComments != null){
                                @Html.Partial("_ArticleComments", Model.Article.ArticleComments.ToList())
                            }else{
                                @Html.Partial("_ArticleComments", new List<DIYFE.EF.ArticleComment>())
                    }
                    </section>
                </article>  

                 
        </div>
        <div class="col-xs-6 col-sm-4 col-lg-4">
            <div id="treeMenu">
                @Html.Partial("_RelatedTreeView", Model.RelatedTreeView)
            </div>
            <div class="productPromo">
                <img src="~/Content/Img/promo.png" />
            </div>
        </div>
        </div>

</div>