@model List<DIYFE.EF.ArticleComment>    


        <div class="sfcommentsListWrp  box-content">
            <h2 class="sfcommentsTitle" id="comments">
              @Model.Count() Comments
            </h2>
            <ol class="sfcommentsList" id="commentsList">
              
              @foreach (DIYFE.EF.ArticleComment comment in Model.OrderByDescending(c => c.CreatedDate))
              {
                          <li class="sfcommentDetails" id="@comment.CommentId">
                            <span class="sfcommentNumber">@(Model.IndexOf(comment) + 1)</span>
                            <strong class="sfcommentAuthor">
                                @comment.PosterName
                            </strong>
                            <em class="sfcommentDate">
                                @comment.CreatedDate.ToShortDateString()
                            </em>
                            <div class="sfcommentText">
                                @comment.CommentText
                            </div>
                              <div><a href="#">reply to comment</a></div>
                        </li>
              }  

            </ol>
            <br />
